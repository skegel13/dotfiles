# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,php,html,css,scss}]
charset = utf-8

[*.{js,php,html,css,scss}]
trim_trailing_whitespace = true

[**.php]
indent_style = tab
indent_size = 4
preserve_newlines = true
max_preserve_newlines = 2

[**.js]
indent_style = tab
indent_size = 2
preserve_newlines = true
max_preserve_newlines = 2
jslint_happy = true

[**.ts]
indent_style = tab
indent_size = 4
preserve_newlines = true
max_preserve_newlines = 2

[**.json]
indent_style = tab
indent_size = 2

[**.jsx]
indent_style = tab
indent_size = 2

[**.css]
indent_style = tab
indent_size = 2
preserve_newlines = true
selector_separator_newline = true
newline_between_rules = true

[**.html]
indent_size = 2
indent_style = tab
max_line_length = 120
max_preserve_newlines = 1
preserve_newlines = true
